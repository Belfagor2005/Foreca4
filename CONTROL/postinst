#!/bin/sh
echo "==================================="

# ---- Device Model ----
BOXMODEL=$(cat /etc/hostname 2>/dev/null || echo "unknown")
# ANSI green: \033[0;32m ... \033
printf "Device Model : %s\033\n" "$BOXMODEL"

# ---- Python Version Check ----
if command -v python3 >/dev/null 2>&1; then
    PYVER=$(python3 --version 2>&1)
elif command -v python >/dev/null 2>&1; then
    PYVER=$(python --version 2>&1)
else
    PYVER="Python: Not installed"
fi
echo "Version: $PYVER"

sleep 1
echo "==================================="
sleep 1
echo "enigma2-plugin-extensions-foreca4 was installed successfully "
sleep 2
set +e
sleep 2
echo ">>>>>>>>>>>>>>>>>>>DONE<<<<<<<<<<<<<<<<<<<<<"
sleep 2
echo ">>>>>>>>>>Foreca 4 v.1.3.4 by Evg77734 ( 2025 )<<<<<<<<<<"
sleep 2
exit 0

